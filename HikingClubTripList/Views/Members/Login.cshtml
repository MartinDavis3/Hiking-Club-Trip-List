@model HikingClubTripList.Models.Login

@{
    ViewData["Title"] = "Login";
}

<h1>Login*</h1>

<h4>Please Log In</h4>
<p>Reserved for club members only.</p>
<p>Please see home page for information about becoming a member.</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginSubmit">
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="button submit-btn btn-login" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    @(ViewData["Message"])
</div>
<br/>
<div>
    <p>*Simulated Login for demonstration of trip pages only.</p>
    <br />
    <p>This is NOT a true secure login.</p>
</div>