@model IEnumerable<HikingClubTripList.Models.Trip>

@{
    ViewData["Title"] = "Index";
}

<h1>Hiking Trip List</h1>
<h4>@(ViewBag.LoggedInMemberName)</h4>

<p>
    <a asp-action="Create">Add a New Trip</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                Leader
            </th>
            <th>
                Spaces Left
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
          <td>
                @(ViewBag.LeadersList[i])
            </td>
            <td>
                @(ViewBag.SpacesLeftList[i])
            </td>
            @{i++;
            }
            <td>
                <a asp-action="Details" asp-route-id="@item.TripID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
