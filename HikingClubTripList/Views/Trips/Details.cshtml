@model HikingClubTripList.Models.TripDetailsViewModel

@{
    ViewData["Title"] = "Details";
}
<h1>Trip Details</h1>
<h4>@Html.DisplayFor(model => model.MemberName)</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.Distance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.Distance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.ElevationGain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.ElevationGain)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.MaxParticipants)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.MaxParticipants)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Leader
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaderName)
        </dd>
        @{
            string dtContent = "Participants:";
            foreach (var item in Model.ParticipantNames)
            {
                <dt class="col-sm-2">
                    @dtContent
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item)
                </dd>
                dtContent = "";
            }
        }
    </dl>
</div>
<div class="panel-footer">
    @{
        <a asp-action="Index">Back to List</a><span> | </span>
        if (Model.IncludeDelete)
        {
            <a asp-action="Delete" asp-route-id="@Model.Trip.TripID">Delete</a><span> | </span>
        }
        if (Model.IncludeEdit)
        {
            <a asp-action="Edit" asp-route-id="@Model.Trip.TripID">Edit</a>
        }
        if (Model.IncludeWithdraw)
        {
            <form asp-action="WithdrawFromTrip" class="form">
                <input value="@Model.Trip.TripID" name="tripID" type="hidden" />
                <input type="submit" value="Withdraw" class="btn btn-primary" />
            </form>
        }
        if (Model.IncludeSignup)
        {
            <form asp-action="SignUpForTrip" class="form">
                <input value="@Model.Trip.TripID" name="tripID" type="hidden" />
                <input type="submit" value="SignUp" class="btn btn-primary" />
            </form>
        }
    }
</div>
