@model HikingClubTripList.Models.Trip

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trip</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Distance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Distance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ElevationGain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ElevationGain)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxParticipants)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxParticipants)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Leader
        </dt>
        @foreach (var item in Model.Signups)
        {
            if (item.AsLeader)
            {
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Member.Name)
                </dd>
            }
        }
        @{
            string dtContent = "Participants";
            bool alreadySignedUp = false;
            foreach (var item in Model.Signups)
            {
                if (item.Member.MemberID == ViewBag.LoggedInMember)
                {
                    alreadySignedUp = true;
                }
                if (!item.AsLeader)
                {
                    <dt class="col-sm-2">
                        @dtContent
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelItem => item.Member.Name)
                    </dd>
                    dtContent = "";
                }
            }
        }

    </dl>
</div>
<div>
    @{
        string buttonType = "submit";
        if (alreadySignedUp || Model.Signups.Count >= Model.MaxParticipants)
        {
            buttonType = "hidden";
        }
    }
    <a asp-action="Edit" asp-route-id="@Model.TripID">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <form asp-action="SignUpForTrip" class="form">
        <input asp-for="TripID" type="hidden" />
        <input type=@buttonType value="Signup" class="btn btn-primary" />
    </form>

</div>
